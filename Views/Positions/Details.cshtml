@model sp23Team13FinalProject.Models.Position

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Position</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PositionTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PositionTitle)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.PositionType)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.PositionType)
            </dd>
        <div style="margin-bottom: 3px;">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
            </div>
        <dd>
            <div>
                <h6>Interview Dates & Times:</h6>

                @foreach (var interview in ViewBag.InterviewsForPosition)
                {
                    <div>
                        <p>-   @interview.Date.ToString("MM/dd/yyyy") Start Time: @interview.StartTime.ToString("hh:mm tt")</p>
                    </div>
                }
            </div>
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Location)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Location)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Deadline)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Deadline)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ApplicableMajors)
        </dt>
        <dd class="col-sm-10">
            @{
                var majors = "";
                foreach (var major in Model.ApplicableMajors)
                {
                    majors += $"{major.MajorName}, ";
                }
                majors = majors.Remove(majors.Length - 2);
            }
            @majors
        </dd>
        <dd class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.Companies.CompanyName)</b>
        </dd>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Companies.CompanyName)
        </dd>
        <dd class="col-sm-2">
            <b>@Html.DisplayNameFor(model => model.Companies.Industry)</b>
        </dd>
        <dd class="col-sm-10">
            @if (!string.IsNullOrEmpty(Model.Companies.Industry1))
            {
                @Html.DisplayFor(model => model.Companies.Industry1)
                if (!string.IsNullOrEmpty(Model.Companies.Industry2) || !string.IsNullOrEmpty(Model.Companies.Industry3))
                {
                    @:,
                }
            }
            @if (!string.IsNullOrEmpty(Model.Companies.Industry2))
            {
                @Html.DisplayFor(model => model.Companies.Industry2)
                if (!string.IsNullOrEmpty(Model.Companies.Industry3))
                {
                    @:,
                }
            }
            @if (!string.IsNullOrEmpty(Model.Companies.Industry3))
            {
                @Html.DisplayFor(model => model.Companies.Industry3)
            }
        </dd>

        </dl>
    </div>
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.PositionID">Edit</a> |
        <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
