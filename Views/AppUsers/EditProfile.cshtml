    @model sp23Team13FinalProject.Models.ViewModels.EditProfileViewModel

    @{
        ViewData["Title"] = "EditCSOProfile";
    }

    <!DOCTYPE html>

    <html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Edit</title>
    </head>
    <body>

        <h4>Edit Profile</h4>
        <hr />
        <div class="row">
            <div class="col-md-4">
                <form asp-action="EditProfile" asp-controller="AppUsers">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group">
                        <label asp-for="FirstName" class="control-label"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="LastName" class="control-label"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <input type="hidden" asp-for="Id" />
                    <div class="form-group">
                        <label asp-for="Email" class="control-label"></label>
                        <input asp-for="Email" class="form-control" readonly />
                        <span asp-validation-for="Email" class="text-danger"></span>
                    </div>
                <dt>Password:</dt>
                <dd>
                    <a asp-action="ChangePassword" asp-controller="Account">Change Password</a>
                </dd>
                <div class="form-group">
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
                </form>
            </div>
        </div>

        <div>
            <a asp-action="Index">Back to List</a>
        </div>
    </body>
    </html>
