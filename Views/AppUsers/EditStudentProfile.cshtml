            <form asp-action="EditStudentProfile" asp-controller="AppUsers">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="FirstName" class="control-label"></label>
                    <input asp-for="FirstName" class="form-control" />
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LastName" class="control-label"></label>
                    <input asp-for="LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                @if (User.IsInRole("CSO"))
                {
                    <div>
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="ActiveStatus" type="checkbox" />
                            @Html.DisplayNameFor(model => model.ActiveStatus)
                        </label>
                    </div>

                }
                <div class="form-group">
                    <label asp-for="PositionType" class="control-label"></label>
                    <select asp-for="PositionType" asp-items="Html.GetEnumSelectList<PositionType>()" class="form-control">
