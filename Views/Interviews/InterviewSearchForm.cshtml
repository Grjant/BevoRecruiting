@model sp23Team13FinalProject.Models.ViewModels.InterviewScheduleViewModel

<h2>Search Interviews</h2>

<div class="row">
    <div class="col-md-4">
        <form asp-action="InterviewSearchForm" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SelectedCompany" class="control-label"></label>
                <select asp-for="SelectedCompany" class="form-control" asp-items="@(new SelectList(Model.Companies, "CompanyName", "CompanyName"))">
                    <option value="">-- Select a company --</option>
                </select>
                <span asp-validation-for="SelectedCompany" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedDate" class="control-label"></label>
                <input type="text" asp-for="SelectedDate" class="form-control datepicker" placeholder="MM/DD/YYYY" />
                <span asp-validation-for="SelectedDate" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SelectedRoomNumber" class="control-label"></label>
                <input type="text" asp-for="SelectedRoomNumber" class="form-control" placeholder="Room Number" />
                <span asp-validation-for="SelectedRoomNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary">Search</button>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>
