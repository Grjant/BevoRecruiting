@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container-fluid">
    <div class="row justify-content-center align-items-center">
        <div class="col-md-6">
            <div class="card shadow-lg border-0 rounded-lg">
                <div class="card-header bg-transparent">
                    <h3 class="text-center font-weight-light my-4">Please Login or Create a New Account</h3>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group">
                            <label asp-for="Email" class="control-label">Email</label>
                            <input asp-for="Email" class="form-control py-2" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="control-label">Password</label>
                            <input asp-for="Password" class="form-control py-2" />
                            <span asp-validation-for="Password" class="text-danger"></span>
                        </div>
                        <div class="form-group d-flex align-items-center justify-content-center mt-4 mb-0">
                            <button type="submit" class="btn btn-lg btn-success btn-block">Login</button>
                        </div>
                    </form>
                    <hr>
                    <div class="text-center">
                        <a asp-action="Register" asp-controller="Account">Register a new user</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
