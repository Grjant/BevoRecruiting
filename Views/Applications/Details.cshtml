@model sp23Team13FinalProject.Models.Application

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Application Details</title>
</head>
<body>

    <div>
        <h4>Application Details</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.FirstName)
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Student.LastName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Student.LastName)
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Position.PositionTitle)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Position.PositionTitle)
            </dd>
            </dd>
            <dd class="col-sm-2">
                <b>@Html.DisplayNameFor(model => model.Position.Companies.CompanyName)</b>
            </dd>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Position.Companies.CompanyName)
            </dd>
            <dd class="col-sm-2">
                <b>@Html.DisplayNameFor(model => model.ApplicationStatus)</b>
            </dd>
            <dd class="col-sm-10">
                <b>@Html.DisplayFor(model => model.ApplicationStatus)</b>
            </dd>

        </dl>
    </div>
    <div>
        @if (User.IsInRole("Student"))
        {
            <a asp-action="Withdraw" asp-controller="Applications" asp-route-id="@Model.ApplicationID">Withdraw</a>

        }
        else
        {
            <a asp-action="RejectionConfirmation" asp-controller="Applications" asp-route-id="@Model.ApplicationID">Reject</a>
            <a asp-action="AcceptanceConfirmation" asp-controller="Applications" asp-route-id="@Model.ApplicationID">Accept</a>

        }

       
        <a asp-action="Index" >Back to List</a>
    </div>
</body>
</html>
