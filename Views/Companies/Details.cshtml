@model sp23Team13FinalProject.Models.Company

@{
    ViewData["Title"] = "Details";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Details</title>
</head>
<body>

    <div>
        <h4>Company</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.CompanyName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.CompanyName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Industry1)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Industry1)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Industry2)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Industry2)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Industry3)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Industry3)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Email)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Email)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Description)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Description)
            </dd>
        </dl>
    </div>
    <div>
        <h6>Positions</h6>
        <ul>
            @foreach (var position in Model.Positions)
            {
                <li>@Html.ActionLink(position.PositionTitle, "Details", "Positions", new { id = position.PositionID }, null)</li>
            }

        </ul>
    </div>
    <div>
        <h6>Interview Dates & Times</h6>
        <hr />
        <ul>
            @foreach (var interview in ViewBag.InterviewDates)
            {
                <div>
                    <p>@interview.Date.ToString("MM/dd/yyyy") - @interview.StartTime.ToString("hh:mm tt")</p>
                </div>
            }
        </ul>
    </div>
    <a asp-action="Edit" asp-route-id="@Model?.CompanyID">Edit</a> |
    <a asp-action="Index">Back to List</a>
    </div>
</body>
</html>
